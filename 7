<button mat-icon-button
        [matTooltip]="getTooltipText(hoveredItem)"
        matTooltipClass="custom-tooltip"
        matTooltipPosition="above">
  <mat-icon>info</mat-icon>
</button>
getTooltipText(item: any): string {
  if (!item) return '';
  return `
    <div><strong>Name:</strong> ${item.name || '-'}</div>
    <div><strong>Short Name:</strong> ${item.shortname || '-'}</div>
    <div><strong>Last Updated:</strong> ${item.lastUpdate || '-'}</div>
    <div><strong>Description:</strong> ${item.description || '-'}</div>
  `;
}
.custom-tooltip {
  white-space: normal;  /* allow multiline */
  max-width: 300px;
  font-size: 13px;
}
