<mat-chip *ngFor="let val of field.value" 
          [matTooltip]="getTooltip(field, val)" 
          removable 
          (removed)="removeValue(field, val)">
  {{ val }}
  <button matChipRemove><mat-icon>cancel</mat-icon></button>
</mat-chip>
getTooltip(field: Field, value: string): string {
  const jsonKey = this.fieldToJsonKey[field.name];
  if (!jsonKey) return '';

  const matchingEntries = this.entries.filter(e => e[jsonKey] === value);
  const baskets = [...new Set(matchingEntries.map(e => e['basket_name']))];

  return baskets.length > 0 ? `Basket(s): ${baskets.join(', ')}` : '';
}
