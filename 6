valueTooltips?: Record<string, string>; field.valueTooltips = {}; // âœ… initialize dictionary
field.values.forEach(v => {
  if (filters['basket_name']) {
    const baskets = filters['basket_name'].split(',');
    field.valueTooltips![v] = `Available for: ${baskets.join(', ')}`;
  } else {
    field.valueTooltips![v] = 'Available';
  }
});
<mat-option *ngFor="let val of field.values"
            [value]="val"
            [matTooltip]="field.valueTooltips?.[val]">
  {{ val }}
</mat-option>
