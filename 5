getSelectedBasketNamesForValue(field: Field, val: string): string {
  // Find the Basket_Name field
  const basketField = this.fields.find(f => f.name === 'Basket_Name');
  if (!basketField) return '';

  // Only consider baskets that are currently selected
  const selectedBaskets = basketField.value;

  // Filter entries for this value AND selected baskets
  const baskets = this.entries
    .filter(e =>
      e[this.fieldToJsonKey[field.name] as string] === val &&
      selectedBaskets.includes(e.basket_name)
    )
    .map(e => e.basket_name);

  // Remove duplicates and join
  return [...new Set(baskets)].join(', ');
}
<mat-chip
  *ngFor="let val of field.value"
  [matTooltip]="getSelectedBasketNamesForValue(field, val)"
  removable
  (removed)="removeValue(field, val)">
  {{ val }}
  <button matChipRemove>
    <mat-icon>cancel</mat-icon>
  </button>
</mat-chip>
